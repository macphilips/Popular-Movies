<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <ListPreference
        android:defaultValue="@string/sort_default_value"
        android:entries="@array/pref_sort_list_titles"
        android:entryValues="@array/pref_sort_list_values"
        android:key="@string/sort_key"
        android:negativeButtonText="@null"
        android:positiveButtonText="@null"
        android:title="@string/sort_by_title" />
    <CheckBoxPreference
        android:defaultValue="false"
        android:key="@string/cache_image"
        android:summaryOff="@string/cache_summary_off"
        android:summaryOn="@string/cache_summary_on"
        android:title="@string/cache_image" />

</PreferenceScreen>
