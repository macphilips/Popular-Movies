<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/black"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.rmhub.popularmovies.ui.MovieDetailsActivity"
    tools:showIn="@layout/activity_movie_details">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        tools:ignore="UselessParent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:id="@+id/photo_blanket"
                android:layout_width="match_parent"
                android:layout_height="@dimen/backdrop_size">
                <ImageButton
                    android:id="@+id/backdrop_photo"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="-15dp"
                    android:layout_marginLeft="-15dp"
                    android:layout_marginRight="-15dp"
                    android:layout_marginTop="-15dp"
                    android:contentDescription="@string/image_desc"
                    android:elevation="@dimen/elevate_dimen"
                    android:scaleType="centerCrop"
                    android:src="@drawable/sample_backdrop" />

                <ImageButton
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="-15dp"
                    android:layout_marginLeft="-15dp"
                    android:layout_marginRight="-15dp"
                    android:layout_marginTop="-15dp"
                    android:background="@drawable/overlay"
                    android:elevation="@dimen/elevate_dimen"
                    android:scaleType="centerCrop" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/contain2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/photo_blanket"
                android:layout_marginTop="-80dp"
                android:elevation="@dimen/elevate_dimen">

                <LinearLayout
                    android:id="@+id/email_login_form"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="70dp"
                    android:layout_toEndOf="@+id/movie_poster"
                    android:layout_toRightOf="@+id/movie_poster"
                    android:background="@color/black"
                    android:elevation="@dimen/elevate_dimen"
                    android:orientation="vertical"
                    android:padding="10dp">

                    <TextView
                        android:id="@+id/movie_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="serif"
                        android:text="@string/movie_title"
                        android:textColor="#ffffff"
                        android:textSize="@dimen/text_heading2"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/movie_release_year"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="serif"
                        android:text="@string/release_date"
                        android:textColor="#ffffff"
                        android:textSize="@dimen/text_heading3"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="serif"
                            android:text="Rating: "
                            android:textColor="#ffffff"
                            android:textSize="12sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/movie_rating"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="serif"
                            android:text="7.8/10"
                            android:textColor="#ffffff"
                            android:textSize="@dimen/text_heading4"
                            android:textStyle="bold" />

                    </LinearLayout>

                </LinearLayout>

                <ImageButton
                    android:id="@+id/movie_poster"
                    android:layout_width="100dp"
                    android:layout_height="146dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="10dp"
                    android:layout_marginStart="10dp"
                    android:background="@android:color/transparent"
                    android:contentDescription="@string/image_desc"
                    android:elevation="@dimen/elevate_dimen"
                    android:scaleType="centerCrop"
                    android:src="@drawable/sample_poster_w182" />



            </RelativeLayout>

            <LinearLayout
                android:id="@+id/overview_contain"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/contain2"
                android:layout_marginTop="10dp"
                android:background="@color/colorPrimaryDark"
                android:elevation="@dimen/elevate_dimen"
                android:orientation="vertical"
                android:padding="15dp">

                <TextView
                    android:id="@+id/overview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="serif"
                    android:text="Overview"
                    android:textColor="#ffffff"
                    android:textSize="@dimen/text_heading1"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/movie_plot"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@id/overview"
                    android:layout_marginTop="12sp"
                    android:fontFamily="serif"
                    android:lineSpacingExtra="@dimen/line_spacing"
                    android:text="@string/overview"
                    android:textColor="#ffffff"
                    android:textSize="@dimen/text_size" />

            </LinearLayout>
            <ImageButton
                android:id="@+id/photo_blanket2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/overview_contain"
                android:background="@drawable/overview_bg"
                android:contentDescription="@string/image_desc"
                android:elevation="@dimen/elevate_dimen" />
        </RelativeLayout>
    </ScrollView>

</RelativeLayout>
